<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin</title>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    @Styles.Render("~/Admin/Content/css")
    @if (IsSectionDefined("css"))
    {
@RenderSection("css", required: false)}


</head>

<body>
    <div class="wrapper ">
        @Html.Partial("~/Areas/Admin/Views/Shared/Common/_Sidebar.cshtml")
        <div class="main-panel">
            @Html.Partial("~/Areas/Admin/Views/Shared/Common/_Navbar.cshtml")
            <div class="content">
                @RenderBody()

            </div>
            @Html.Partial("~/Areas/Admin/Views/Shared/Common/_Footer.cshtml")
        </div>
    </div>

    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/vendor/jquery/jquery-plugin-collection.js"></script>



    @if (IsSectionDefined("scripts"))
    {
@RenderSection("scripts", required: false)}
</body>
</html>
